<div class="col-md-2 col-sm-12 content-height rounded-3">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Playlist</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">My Playlist</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
            <ul class="list-group shadow-lg pt-2">
                <% if (playlists.length === 0) { %>
                    <strong class="text-center">No Playlist Found</strong><br>
                <% } else { %>
                    <% playlists.forEach(playlist=> { %>
                        <a 
                            href="/playlist/<%= playlist.playlist_id %>" 
                            class="list-group-item list-group-item-action <%= typeof playlistId !== 'undefined' && playlist.playlist_id == playlistId ? 'active_playlist' : '' %>">
                            <img src="<%= playlist.playlist_icon %>"
                                class="img-fluid rounded"
                                width="50"
                                alt="Playlist Icon"
                            >
                            <strong><%= playlist.playlist_name %></strong>
                        </a>
                    <% }) %>
                <% } %>
            </ul>
        </div>
        <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
            <div class="pt-2 text-center">
                <button class="btn btn-outline-success btn-sm text-center" data-bs-toggle="modal" data-bs-target="#createPlaylistModal">
                    Create Playlist
                </button>
            </div>
            <ul class="list-group shadow-lg pt-2">
                <% if (userPlaylists.length === 0) { %>
                    <strong class="text-center">No Playlist Found</strong><br>
                <% } else { %>
                    <% userPlaylists.forEach(userPlaylist=> { %>
                        <a 
                            href="/my-playlist/<%= userPlaylist.playlist_id %>" 
                            class="list-group-item list-group-item-action <%= typeof playlistId !== 'undefined' && userPlaylist.playlist_id == playlistId ? 'active_playlist' : '' %>"> 
                            <img src="<%= userPlaylist.playlist_icon %>"
                                class="img-fluid rounded"
                                width="50"
                                alt="Playlist Icon"
                            >
                            <strong><%= userPlaylist.playlist_name %></strong>
                        </a>
                    <% }) %>
                <% } %>
            </ul>
        </div>
    </div>
</div>